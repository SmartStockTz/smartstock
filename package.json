{
  "name": "smartstock",
  "description": "manage your sales, purchase and stock",
  "author": "FahamuTech",
  "version": "20.10.1",
  "build": {
    "appId": "com.fahamutech.smartstock",
    "mac": {
      "category": "Office"
    },
    "linux": {
      "category": "Office"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:desktop": "npx gulp copyBFastJs && ng serve -c=electron",
    "start:android": "npx gulp copyBFastJs && ng serve --host 0.0.0.0 -c=android",
    "build:desktop": "ng build --prod -c=electronProd --base-href ./ && npx gulp syncDesktop",
    "build:android": "npx gulp copyBFastJs && ng build --prod -c=androidProd --base-href ./ && npx cap sync",
    "prepare:snap": "cd desktop && npm install && npm run build:snap",
    "prepare:mac": "cd desktop && npm install && npm run build:mac",
    "push:snap:edge": "snapcraft upload desktop/dist/smartstock_${PACKAGE_VERSION}_amd64.snap --release edge",
    "push:snap:stable": "snapcraft upload desktop/dist/smartstock_${PACKAGE_VERSION}_amd64.snap --release stable",
    "build:web": "npx gulp copyBFastJs && ng build --prod",
    "build:webapp": "npx gulp copyBFastJs && ng build --prod -c=androidProd",
    "build:webdesktop": "npx gulp copyBFastJs && ng build --prod -c=electronProd",
    "deploy:web": "npm run build:web && firebase deploy --only hosting:web --token \"$FIREBASE_TOKEN\"",
    "deploy:webapp": "npm run build:webapp && firebase deploy --only hosting:mobile --token \"$FIREBASE_TOKEN\"",
    "deploy:webdesktop": "npm run build:webdesktop && firebase deploy --only hosting:desktop --token \"$FIREBASE_TOKEN\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.0.11",
    "@angular/cdk": "~10.2.4",
    "@angular/common": "~10.1.5",
    "@angular/compiler": "~10.0.11",
    "@angular/core": "~10.1.5",
    "@angular/forms": "~10.0.11",
    "@angular/material": "^10.2.4",
    "@angular/platform-browser": "~10.0.11",
    "@angular/platform-browser-dynamic": "~10.0.11",
    "@angular/router": "~10.0.11",
    "@angular/service-worker": "^10.0.11",
    "@smartstocktz/core-libs": "^0.0.2",
    "@smartstocktz/stocks": "^0.0.3",
    "@smartstocktz/purchases": "^0.0.3",
    "@smartstocktz/sales": "^0.0.6",
    "@smartstocktz/accounts": "^0.0.1",
    "bfastjs": "^4.0.0-beta.25",
    "highcharts": "^8.1.2",
    "material-design-icons": "^3.0.1",
    "moment": "^2.26.0",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "typeface-roboto": "0.0.75",
    "uuid": "^8.1.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1000.7",
    "@angular/cli": "^10.0.7",
    "@angular/compiler-cli": "~10.0.11",
    "@angular/language-service": "~10.0.11",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "grpc": "^1.17.0",
    "gulp": "^4.0.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.7"
  }
}
