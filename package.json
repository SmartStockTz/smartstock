{
  "name": "smartstock",
  "description": "manage your sales, purchase and stock",
  "author": "FahamuTech",
  "version": "20.6.9",
  "build": {
    "appId": "com.fahamutech.smartstock",
    "mac": {
      "category": "Office"
    },
    "linux": {
      "category": "Office"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "npx gulp copyBFastJs && ng serve",
    "start:desktop": "npx gulp copyBFastJs && ng serve -c=electron",
    "start:android": "npx gulp copyBFastJs && ng serve --host 0.0.0.0 -c=android",
    "build:desktop": "npx gulp copyBFastJs && ng build --prod -c=electronProd --base-href ./ && npx cap sync",
    "build:android": "npx gulp copyBFastJs && ng build --prod -c=androidProd --base-href ./ && npx cap sync",
    "prepare:snap": "cd electron && npm install && npm run build:snap",
    "prepare:mac": "cd electron && npm install && npm run build:mac",
    "push:snap:edge": "snapcraft push \"electron/dist/smartstock_${PACKAGE_VERSION}_amd64.snap\" --release edge",
    "push:snap:stable": "snapcraft push \"electron/dist/smartstock_${PACKAGE_VERSION}_amd64.snap\" --release stable",
    "build:web": "npx gulp copyBFastJs && ng build --prod",
    "build:webapp": "npx gulp copyBFastJs && ng build --prod -c=androidProd",
    "deploy:web": "firebase deploy --only hosting:web --token \"$FIREBASE_TOKEN\"",
    "deploy:webapp": "firebase deploy --only hosting:mobile --token \"$FIREBASE_TOKEN\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.0.6",
    "@angular/cdk": "~9.1.2",
    "@angular/common": "~9.0.6",
    "@angular/compiler": "~9.0.6",
    "@angular/core": "~9.0.6",
    "@angular/forms": "~9.0.6",
    "@angular/material": "^9.1.2",
    "@angular/platform-browser": "~9.0.6",
    "@angular/platform-browser-dynamic": "~9.0.6",
    "@angular/router": "~9.0.6",
    "@angular/service-worker": "^9.0.6",
    "@capacitor/android": "^2.1.2",
    "@capacitor/angular": "^1.0.2",
    "@capacitor/core": "latest",
    "@capacitor/electron": "^2.1.2",
    "bfastjs": "^3.0.13",
    "hammerjs": "^2.0.8",
    "highcharts": "^8.1.2",
    "moment": "^2.26.0",
    "ngx-image-cropper": "^3.1.3",
    "rxjs": "~6.5.5",
    "saturn-datepicker": "^8.0.5",
    "tslib": "^1.11.1",
    "uuid": "^8.1.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.901.7",
    "@angular/cli": "^9.0.6",
    "@angular/compiler-cli": "~9.0.6",
    "@angular/language-service": "~9.0.6",
    "@capacitor/cli": "latest",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "grpc": "^1.17.0",
    "gulp": "^4.0.2",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.5.2",
    "protractor": "^5.4.3",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.7.5"
  }
}
