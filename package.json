{
  "name": "smartstock",
  "description": "manage your sales, purchase and stock",
  "author": "SmartStock Company",
  "version": "21.9.10-build.35-v2.5",
  "android-build": "20",
  "build": {
    "appId": "com.fahamutech.smartstock",
    "mac": {
      "category": "Office"
    },
    "linux": {
      "category": "Office"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:electron": "export EA=1 && npm-run-all -p start:desktop electron:serve",
    "electron:serve": "export EA=1 && wait-on tcp:4200 && cd desktop && npm start",
    "start:desktop": "npx ng serve --host 0.0.0.0 -c=electron",
    "build:desktop": "npx ng build -c=desktopProd --base-href=./ && node desktop-version.js && cp -r dist/smartstock desktop",
    "build:mobile": "npx ng build --configuration production -c=desktopProd --base-href=./ && node android-version.js && npx cap sync",
    "deploy:desktop:snap": "npx ng build -c=desktopProd --base-href=./ && bash desktop.sh",
    "prepare:snap": "cd desktop && npm install && npm run build:snap",
    "prepare:mac": "cd desktop && npm install && npm run build:mac",
    "push:snap:edge": "snapcraft upload desktop/dist/smartstock_${PACKAGE_VERSION}_amd64.snap --release edge",
    "push:snap:stable": "snapcraft upload desktop/dist/smartstock_${PACKAGE_VERSION}_amd64.snap --release stable",
    "build:web": "ng build --configuration production",
    "build:webdesktop": "ng build --configuration production -c=electronProd",
    "deploy:business": "npm run build:web && firebase deploy --only hosting:business",
    "deploy:web": "npm run build:web && firebase deploy --only hosting:web",
    "deploy:web:ci": "npm run build:web && firebase deploy --token \"$FIREBASE_TOKEN\" --only hosting:web",
    "deploy:webdesktop": "npm run build:webdesktop && firebase deploy --only hosting:desktop",
    "deploy:webdesktop:ci": "npm run build:webdesktop && firebase deploy --token \"$FIREBASE_TOKEN\" --only hosting:desktop",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron:start": "ng build --watch --output-path=desktop/public --base-href=./"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.5",
    "@angular/cdk": "~12.2.5",
    "@angular/common": "~12.2.5",
    "@angular/compiler": "~12.2.5",
    "@angular/core": "~12.2.5",
    "@angular/forms": "~12.2.5",
    "@angular/material": "^12.1.4",
    "@angular/material-moment-adapter": "^12.1.4",
    "@angular/platform-browser": "~12.2.5",
    "@angular/platform-browser-dynamic": "~12.2.5",
    "@angular/router": "~12.2.5",
    "@angular/service-worker": "^12.1.4",
    "@capacitor/android": "^3.2.5",
    "@capacitor/angular": "^1.0.3",
    "@capacitor/app": "^1.0.5",
    "@capacitor/core": "^3.2.5",
    "@capacitor/ios": "^3.2.5",
    "@smartstocktz/accounts": "^0.2.11",
    "@smartstocktz/core-libs": "^0.3.3",
    "@smartstocktz/dashboard": "^0.2.1",
    "@smartstocktz/expense": "^0.2.2",
    "@smartstocktz/purchases": "^0.2.1",
    "@smartstocktz/reports": "^0.2.1",
    "@smartstocktz/sales": "^0.2.3",
    "@smartstocktz/stocks": "^0.2.1",
    "@smartstocktz/store": "^0.2.1",
    "@smartstocktz/web": "~0.2.1",
    "bfast": "~6.0.0-alpha.2",
    "bootstrap": "^4.5.3",
    "comlink": "^4.3.1",
    "crypto-hash": "~1.3.0",
    "firebase": "^9.0.2",
    "highcharts": "~9.3.0",
    "localforage": "^1.10.0",
    "material-design-icons": "~3.0.1",
    "moment": "~2.29.1",
    "ngx-infinite-scroll": "^10.0.1",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "typeface-roboto": "~1.1.13",
    "uuid": "~8.3.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.1.4",
    "@angular/cli": "^12.1.4",
    "@angular/compiler-cli": "~12.2.5",
    "@angular/language-service": "~12.2.5",
    "@capacitor/cli": "latest",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "grpc": "^1.17.0",
    "gulp": "^4.0.2",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.4",
    "wait-on": "^5.2.0"
  }
}
