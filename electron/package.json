{
  "name": "smartstock",
  "description": "manage your sales, purchase and stock",
  "author": "Fahamu Tech",
  "version": "20.6.7",
  "main": "./index.js",
  "build": {
    "appId": "com.fahamutech.smartstock",
    "mac": {
      "category": "Office"
    },
    "linux": {
      "category": "Office"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "start": "electron ./",
    "test": "ng test",
    "lint": "ng lint",
    "build:snap": "electron-builder --linux snap",
    "build:mac": "electron-builder --mac",
    "build:snap32": "electron-builder --linux --ia32 snap",
    "build:win": "electron-builder --win"
  },
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "@capacitor/electron": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-builder": "^22.7.0"
  }
}
